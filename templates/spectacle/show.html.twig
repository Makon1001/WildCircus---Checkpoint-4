{% extends 'base.html.twig' %}

{% block title %}Spectacle{% endblock %}

{% block body %}
    <h1>Spectacle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ spectacle.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ spectacle.name }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td><ul>
                        {% for ville in spectacle.villes %}
                            <li>{{ ville.nom}} </li>
                        {% else %}
                            <li>No city for this spectacle</li>
                        {% endfor %}
                    </ul></td>
            </tr>
            <tr>
                <th>PlaceDispo</th>
                <td>{{ spectacle.placeDispo }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ spectacle.date ? spectacle.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TarifEnfantSemaine</th>
                <td>{{ spectacle.tarifEnfantSemaine }}</td>
            </tr>
            <tr>
                <th>TarifEnfantWE</th>
                <td>{{ spectacle.tarifEnfantWE }}</td>
            </tr>
            <tr>
                <th>TarifAdultSemaine</th>
                <td>{{ spectacle.tarifAdultSemaine }}</td>
            </tr>
            <tr>
                <th>TarifAdultWE</th>
                <td>{{ spectacle.tarifAdultWE }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('spectacle_index') }}">back to list</a>

    <a href="{{ path('spectacle_edit', {'id': spectacle.id}) }}">edit</a>

    {{ include('spectacle/_delete_form.html.twig') }}
{% endblock %}
