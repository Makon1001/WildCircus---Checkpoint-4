<div class="modal fade" id="ModalResa" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(form) }}
                {{ form_row(form.school) }}
                {{ form_row(form.nomEtablissement, { 'attr': {'placeholder': 'Entreprise'} }) }}
                {{ form_row(form.nbEnfant) }}
                {{ form_row(form.nbAdulte) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom) }}
                {{ form_row(form.email) }}
                {{ form_row(form.spectacle) }}
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button type="submit" class="btn btn-warning">
                    Reserver
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
</div>