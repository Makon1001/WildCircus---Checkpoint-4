{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>School</th>
                <td>{{ reservation.school ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>NomEtablissement</th>
                <td>{{ reservation.nomEtablissement }}</td>
            </tr>
            <tr>
                <th>NbEnfant</th>
                <td>{{ reservation.nbEnfant }}</td>
            </tr>
            <tr>
                <th>NbAdulte</th>
                <td>{{ reservation.nbAdulte }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ reservation.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ reservation.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reservation.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}">back to list</a>

    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>

